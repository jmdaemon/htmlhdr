\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{htmlhdr}[2023/03/29 Macro for using HTML style headings]
\RequirePackage{suffix}

% Notes:
% This could use a macro to simplify the command creation
% Support for additional environments:
%   - iv
%   - v
\newcommand\hi[1]               { \section{#1} }
\WithSuffix\newcommand\hi*[1]   { \section*{#1} }

\newcommand\hii[1]              { \subsection{#1} }
\WithSuffix\newcommand\hii*[1]  { \subsection*{#1} }

\newcommand\hiii[1]             { \subsubsection{#1} }
\WithSuffix\newcommand\hiii*[1] { \subsubsection*{#1} }
